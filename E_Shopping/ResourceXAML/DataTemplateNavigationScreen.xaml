<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:E_Shopping.ViewModel"
                    xmlns:view="clr-namespace:E_Shopping.UserControlBar.Screen"
                    xmlns:view1="clr-namespace:E_Shopping.UserControlBar"
                    xmlns:view2="clr-namespace:E_Shopping.View"
                    >
    <DataTemplate DataType="{x:Type vm:ShippingDetailsViewModel}">
        <view:ShippingDetails />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:CartViewModel}">
        <view1:Cart x:Name="CartViewxaml" />
    </DataTemplate>
    <DataTemplate  DataType="{x:Type vm:ShippingAddressViewModel}">
        <view:ShippingAddress />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:DeliveryOptionViewModel}">
        <view:DeliveryOption />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:PaymentOptionsViewModel}">
        <view:PaymentOptions />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:OrderedHistoryViewModel}">
        <view:OrderedHistory />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ProductDetailViewModel}">
        <view2:ProductDetailView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:SearchFilterProductViewModel}">
        <view2:SearchFilterProduct/>
    </DataTemplate>
</ResourceDictionary>